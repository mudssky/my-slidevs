{
  "name": "learn-threejs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "slidev build",
    "dev": "slidev --open",
    "dev:remote": "slidev --remote",
    "export": "slidev export",
    "slidev:export": "npx slidev export --format pdf --output slides-export/pdf",
    "slidev:exportAll": "pnpm slidev:exportAllFormat && pnpm slidev:exportAllFormatWithClicks",
    "slidev:exportAllFormat": "npx slidev export --format png --output slides-export/png && npx slidev export --format pdf --output slides-export/pdf ",
    "slidev:exportAllFormatWithClicks": "npx slidev export --format png --output slides-export/png-clicks --with-clicks && npx slidev export --format pdf --output slides-export/pdf-clicks --with-clicks",
    "start": "pnpm dev",
    "build:base": "slidev build --base /my-slidevs/slidevs/learn-threejs",
    "format": "prettier '**/*.{js,ts,vue}' --write"
  },
  "dependencies": {
    "@mudssky/slidev-style": "workspace:*",
    "@my-slidev/tsconfig": "workspace:^",
    "d3-geo": "^3.1.1",
    "simplex-noise": "^4.0.3",
    "three": "^0.181.2"
  },
  "devDependencies": {
    "@types/d3-geo": "^3.1.0",
    "@types/three": "^0.181.0"
  }
}
